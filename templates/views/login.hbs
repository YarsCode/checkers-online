    <body>
        {{>header}}

    {{!-- Temporary --}}
    
    <a href="/" style="margin-left: 30%;">Home</a>

    {{!-- Temporary --}}

        <div class="login-container">
            <div class="login-form">
                <h1>Login</h1>
                <form id="login-form">
                    <p>
                        <label for="email" class="email-field">Email:</label><br>
                        <input type="text" id="login-email" name="email" placeholder="Enter your email" required/><br><br>
                    </p>
                    <p>
                        <label for="password">Password:</label><br>
                        <input type="password" id="login-password" name="password" placeholder="Enter your password" required />
                    </p>
                    <input type="submit" value="Submit" class="submit-button"/>
                </form>
            </div>            
        </div>
        <div class="login-sign-up-redirection">
            <p>Don't have an account? Please Sign Up <a href="/sign-up">here.</a></p>
            
        </div>

        {{>footer}}

        <script type="module" src="./js/login.js"></script>
    </body>
</html>